{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node", "@playwright/test"],
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["e2e/src/pages/*"],
      "@steps/*": ["e2e/src/steps/*"],
      "@support/*": ["e2e/src/support/*"],
      "@fixtures/*": ["e2e/fixtures/*"],
      "@web-app/*": ["../web_app/src/*"]
    }
  },
  "include": [
    "e2e/**/*.ts",
    "playwright.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test-results",
    "allure-results",
    "allure-report",
    "playwright-report"
  ]
}
